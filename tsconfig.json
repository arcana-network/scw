{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",
    "importHelpers": true,
    "allowJs": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es2018"],
    "skipLibCheck": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules/*", "**/__tests__/*"]
}